pipeline {
    agent any
    tools {
        maven 'Maven'
    }
    stages {
        stage('Begin Deployment') {
            steps {
                echo 'Hello world !'
            }
        }
        stage('Build') {
            steps {
                sh 'mvn -B -DskipTests clean package'
            }
        }
        stage('Unit Test') {
            steps {
                sh 'mvn test'
            }
            post {
                always {
                    junit 'target/surefire-reports/*.xml'
                }
            }
        }
        stage('Sonar Test') {
            steps {
                sh 'org.sonarsource.scanner.maven:sonar-maven-plugin:3.2:sonar -Dsonar.projectKey=pokebible -Dsonar.host.url=http://sonar:9000 -Dsonar.login=d8ad64a57770392308093f4704e4e53caca9dee8'
            }
        }
        stage('Nexus') {
            steps {
                sh './jenkins/nexus.sh'
            }
        }
        stage('Deploy') {
            steps {
                sh './jenkins/deploy.sh'
            }
        }
        stage('End Deployment') {
            steps {
                echo 'good bye !'
            }
        }
    }
}